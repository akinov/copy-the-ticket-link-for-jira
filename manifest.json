{
  "name": "Copy the ticket link",
  "description": "Copy links of Github and Jira",
  "version": "0.2",
  "author": "akinov",
  "permissions": [ "clipboardWrite", "activeTab", "declarativeContent" ],
  "icons": {
    "128": "images/icon128.png",
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png"
  },
  "background": {
    "persistent": false,
    "scripts": [ "scripts/background.js" ]
  },
  "page_action": {
    "default_icon": "images/icon32.png",
    "default_popup": "views/popup.html",
    "default_title": "Copy link"
  },
  "manifest_version": 2
}
